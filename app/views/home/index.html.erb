<%- model_class = Post -%>

<div class="search">
  <div class="row">
    <div class="span12">
      <%= form_for :customers, :url => root_path,:html => { :method => :get } do |f| %>
        <%= text_field_tag :search, params[:search] ,:class => "search-query input-medium" ,:id => :search, :placeholder => 'general search' %>
        <%= f.submit 'Search', :class => "btn mlm", :id => 'book-search-btn' %>
      <%-end%>
    </div>
  </div>
</div>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.id, "#" %></td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.created_at.to_s %></td>
      </tr>
    <% end %>
  </tbody>
</table>
